.top{
  width: 100%;
  height: 30rpx;
  display: flex;
  margin-bottom: 10rpx;
  background-color: #fff;
  justify-content: space-between;
}
.tip{
  color: #bbb;
  font-size: 28rpx;
  padding-left: 20rpx;
}
.edit{
  color: #333;
  font-size: 28rpx;
  padding-right: 20rpx;
}

.center{
  width: 100%;
}
.empty{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 160rpx;
  color: #bbb;
  font-size: 32rpx;
}
.img{
  background-color: #eee;
  width: 180rpx;
  height: 180rpx;
  line-height: 170rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
}
.img image{
  padding-top: 25rpx;
  padding-left: 30rpx;
  width: 120rpx;
  height: 120rpx;
}

/* 商品列表不为空时 */
.exist{
  margin-top: 40rpx;
}
.shopName{
  color: #bbb;
  font-size: 30rpx;
  padding-bottom: 15rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
}

/* 花列表 */
.flowerItem{
  display: flex;
  align-items: center;
  width: 100%;
  height: 200rpx;
  border-bottom: 1rpx solid #eee;
}
.flowerLeft{
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid #CCCCCC;
  border-radius: 50%;
}
.flowerLeftChecked{
  color: #66cc99;
  margin-left: 20rpx;
  font-size: 50rpx;
}
.flowerRight{
  display: flex;
}
.left{
  flex:1;
}
.flowerImg{
  width: 180rpx;
  height: 180rpx;
  margin-left: 10rpx;
}
.right{
  display: flex;
  flex:4;
  flex-direction: column;
  margin-left: 10rpx;
}
.rightLevel1{
  display: flex;
  margin-bottom: 80rpx;
}
.title{
  color: #333333;
  font-size: 30rpx;
  width: 430rpx;
}
.deleteIcon image{
  width: 50rpx;
  height: 50rpx;
}

.rightLevel2{
  display: flex;
}
.price{
  color:#FFCC99;
  font-size: 26rpx;
  width: 100rpx;
}
.operation{
  display: flex;
  flex: 4;
  margin-left: 250rpx;
}
.minus{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #eee;
}
.num{
  color:#333;
  margin: 0rpx 20rpx;
}
.plus{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #FFCC99;
}

/* 底部结算 */
.bottom{
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0rpx;
  font-size: 30rpx;
  border-top: 1rpx solid #eee;
}
.select{
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid #cccccc;
  border-radius: 50%;
  margin-right: 20rpx;
}
.totalMoney{
  flex: 2;
  color: #ffcc99;
  margin-left: 50rpx;
}
.pay{
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  flex: 1.5;
  background-color: #666;
  color: #fff;
}
.payed{
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  flex: 1.5;
  background-color: #ff9966;
  color: #fff;
}