page {
  box-sizing: border-box;
  padding:0.5em;
}
/* 告白说说 */
.confe_item {
  width: 100%;
  display:flex;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: space-between;
  min-height: 22vh;
  margin: 1rem 0;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 0 8px 12px #ebedf0;
}

.confe_content_main {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 0.8rem;
}
.confe_content_main .content_text {
  width: 90%;
  display: -webkit-box;
  max-height: 5.8rem;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow:hidden;
  padding: 0.5rem 0;
}

.img_container {
  display: grid;
  width: 100%;
  grid-template-columns: repeat(3,1fr);
  grid-gap: 10rpx;
  padding: 0.5rem;
}
.img_container image {
  width: 95%;
  height: 200rpx;
  margin: 0.2rem;
}
.confe_toolbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 2.5rem;
}
.confe_toolbar view {
  flex: 1;
  height: 2rem;
  line-height: 2rem;
  text-align: center;
}
.confe_toolbar view:nth-child(1){
  border-right: 1px solid #8c8c8c;
}