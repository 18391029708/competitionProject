@import "./assets/iconfont.wxss";
page {
  overflow-y: auto;
}
.container_editor {
  position: relative; 
  top: 0; 
  left: 0; 
  width: 100%;
  margin-bottom: 10rpx;
  border: 1px solid #ECECEC;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 90%; 
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  z-index: 10;
  left: 0;
  right: 100%;
  bottom: 0;
  line-height: 50px;
  white-space: nowrap;
  overflow: auto hidden;
  background-color: #fff;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}
.chooseImg_bar {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.chooseImg_item {
  width: 32%;
  height: 240rpx;
  margin: 0;
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 1px 1px 4px 1px #ccc;
  margin: 5rpx;
}
.deleteImg {
  position: absolute;
  z-index: 9;
  top: -16px;
  right: -16px;
}
.chooseImg_item image {
  width: 100%;
  height: 100%;
}

.complete_write {
  margin-top: 50rpx;
}