.flowerList{
  width: 100%;
  height: 100%;
}
.flowerItem{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #eeeeee;
}
.left{
  flex:1;
}
.flowerImg{
  width: 180rpx;
  height: 180rpx;
  margin-left: 10rpx;
}
.right{
  flex:4;
  margin-left: 10rpx;
}
.title{
  color: #333333;
  font-size: 30rpx;
  margin-bottom: 50rpx;
}
.price{
  color:#FFCC99;
  font-size: 26rpx;
}
.sales{
  display: flex;
  justify-content: space-between;
}
.amount{
  color: #BBBBBB;
  font-size: 26rpx;
}
