/* pages/commentDetail/commentDetail.wxss */
page {
  padding-bottom:14vh;
}
button {
  margin: 0 !important;
}
.content {
  padding: 0.5rem;
  font-size: 0.9rem;
  font-weight: 500;
}
.img_container {
  display: grid;
  grid-template-columns: repeat(3,1fr);
  grid-gap: 10rpx;
  padding: 0.5rem;
  /* flex-wrap: wrap;
  padding-bottom: 1rem; */
}
.img_container image {
  width: 100%;
  height: 200rpx;
  margin: 0.2rem;
}
.comments_item {
  margin: 1rem 2rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid #d9d9d9;
}
.comment_content {
  /* height: 3rem; */
  font-weight: 550;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding: 0 1.5rem;
}
.reply  {
  line-height: 1.5rem;
  border-radius: 20rpx;
  font-size: 0.8rem;
  text-align: right;
  padding-right: 2rem;
  color: #0094ff;
}

.comment_input_box {
  width: 100%;
  height: 10vh;
  position: fixed;
  background-color: #fff;
  bottom: 0;
  padding: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: space-around;
} 
.comment_input_box input {
  width: 60%;
  height: 50%;
  padding:0 1rem;
  background-color: #dede;
  border-radius: 1.5rem;
}
