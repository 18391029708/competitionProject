<!--pages/confession.wxml-->
<view class="confe_page">
  <view class="confe_item" wx:for="{{confessions}}" wx:key="item.confessionId">
    <view class="confe_content">
      <userHeader userName="{{item.userId}}" avatarUrl="{{item.avatarUrl}}" postTime="{{item.createTime}}"></userHeader>
      <view class="confe_content_main">
        <!-- 文字内容 -->
        <navigator url="../commentDetail/commentDetail" class="content_text">
          {{item.content}}
        </navigator>
        <!-- 图片内容 -->
        <view class="img_container">
          <image wx:for="{{item.pictures}}" wx:key="index" src="{{item}}" wx:if="{{index<3}}" />
        </view>
      </view>
    </view>
    <!-- 点赞·评论 -->
    <view class="confe_toolbar">
      <view bindtap="handleLike" class="iconfont {{isLike?'icon-like':'icon-like1'}}">{{item.likeCount}}</view>
      <view>
        <navigator url="../commentDetail/commentDetail" class="iconfont icon-pinglun">{{item.commentCount}}</navigator>
      </view>
    </view>
  </view>
  <view class="doConfess" bindtap="handleWritePanel">
    <text class="iconfont icon-xiepinglun"></text>
    我要表白
  </view>
  <van-popup show="{{ show }}" position="bottom" custom-style="height: 90%;" round bind:close="cancelWrite">
    <view class="write_panel_header">
      <text bindtap="cancelWrite">取消</text>
      <text>发布</text>
    </view>
  </van-popup>
</view>