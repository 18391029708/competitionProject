.container{
  background-color: #f5f5f5;
}

.typesContainer{
  display: flex;
  margin: 3px 0px;
  width: 100%;
}
.type{
  background-color: #ffffff;
  flex: 1;
  border-right: 2px solid #eee;
  box-shadow: 2px 2px 5px #888888;
}
.typesContainer view:last-child{
  border-right: none;
}
.typeText{
  color: #222;
  font-size: 17px;
  font-weight: 200;
  text-align: center;
  width: 98%;
  height: 50px;
  line-height: 50px;
  border-right: 1px solid #eee;
}
.chosenType{
  color:peachpuff;
  font-size: 17px;
  font-weight: bolder;
}

/* 失物招领 */
.lostLists{
  width: 100%;
  height: 100%;
}
.lostItem{
  background-color: #eeeeee;
  height: 220px;
  margin: 5px 0px;
  border-top: 1px solid #eee;
}
.lostDesc{
  margin-left: 10px;
}
.lostDesc view{
  height: 30px;
}
.lostDesc view text{
  color: #222;
  font-size: 15px;
}
.lastone{
  display: flex;
  align-items: center;
  height: 100rpx;
}
.btn{
  margin-left: 45%;
  width: 240rpx;
  border-radius: 10rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  background-color: peachpuff;
}

.my-deliver{
  width: 100%;
}