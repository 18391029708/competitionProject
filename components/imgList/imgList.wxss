.img_container {
  display: grid;
  width: 100%;
  box-sizing: border-box;
  grid-template-columns: repeat(3,1fr);
  padding: 0.5rem;
}
.img_container image {
  width: 95%;
  object-fit: cover;
  height: 230rpx;
  margin: 0.2rem;
}
/* 更多图片 */
.more_image {
  position: relative;
  width: 95%;
  height: 235rpx;
  border-radius: 20px;
  overflow: hidden;
}
.more_image_number {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.5);
  border-radius: 20px;
  position: absolute;
  font-size: 2.5em;
  top: 0;
  z-index:100;
  color: #fff;
}