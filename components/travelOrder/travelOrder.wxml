<view class="container">
  <view class="orderItem">
    <view class="lev">
      <text>{{orderType}}</text>
      <text class="title">{{orderStatus}}</text>
    </view>
    <!-- 根据订单类型展示不同布局类型  电车搭乘类型 -->
    <!-- <view class="orderCss"> -->
      <view class="textCss" >
        <text class=" {{task.orderStatus == '正在进行'?'progressColor': task.orderStatus == '等待接单'?'awaitColor':'finishColor'}}">{{task.orderStatus}}</text>
      </view>
      <view class="orderCss">  
          <image class="image" src="../../icons/start.png"></image>
        <view class="iconfont icon-qidian">{{task.start_position}}</view>
      </view>
      <view class="orderCss"> 
          <image class="image" src="../../icons/end.png"></image>
        <view class="iconfont icon-zhongdian">{{task.end_position}}</view>
      </view>
      <view class="orderCss">
          <image class="image" style="../../icons/listTime.png"></image>
        <view class="iconfont icon-shijian">{{task.create_time}}</view>
      </view>
    </view>
  <!-- </view> -->
</view>