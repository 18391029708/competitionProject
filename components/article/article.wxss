.main-wrapper {
  height: 95vh;
  width: 100vw;
  background-color: #fff;
}
/* 标签容器 */
.article-labels {
  min-height: 15vh;
  padding: 0.5em;
  background-color: #fff;
  display: grid;
  grid-template-columns: repeat(4,1fr);
  grid-gap: 0.2em;
  box-shadow: 0 2px 10px -5px #bfbfbf;
}
.main-wrapper .van-card {
  border-radius: 16px;
}
.article-item {
  padding: 0.5em;
  background-color: #fff;
  border-radius: 16px;
}
.article-item {
  margin: 1em;
  box-shadow: 0 3px 20px 3px #efefef;
  border-radius: 16px;
}
.tag-banner-title {
  padding-left: 1em;
  color: #f5222d;
  background-color: #fff;
}
.tag-custom-class {
  margin: 1em;
}
/* 内容标签 */
.article-tag {
  width: 100%;
  height: 2em;
  text-align: center;
  line-height: 2em;
  border-radius: 5px;
  background-color: #d9d9d9;
}


