page {
  background-color: #F5F5F5;
}

.list {
  margin: 20rpx 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
}

.top {
  display: flex;
}

.user-profile {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background-color: aqua;
}

.user-info {
  padding-left: 15rpx;
  flex: 5;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 30rpx;
}

.add-time {
  font-size: 24rpx;
  color: #A9A9A9;
}

.task-status {
  display: flex;
  flex: 2;
  align-items: center;
  justify-content: center;
}

.status {
  text-align: center;
  width: 150rpx;
  height: 60rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  background-color: #FF1493;
  color: #ffffff;
}

.task-detail {
  padding: 30rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  width: 90%;
}

.task-top {
  margin: 5px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #D3D3D3;
}

.task-type {
  padding: 15rpx;
  font-size: 32rpx;
}

.task-profit {
  padding: 15rpx;
  font-size: 30rpx;
  color: red;
}